import tkinter, sys

def koniec():
    sys.exit()
def zmiana():
    l.config(text='Wciśnij zakończ')


main = tkinter.Tk()

l = tkinter.Label(main, text='Wciśnij przycisk poniżej')

b = tkinter.Button(main, text='Zakończ', command = koniec)
b2 = tkinter.Button(main, text='Przycisk', command = zmiana)

l.pack()
b2.pack()
b.pack()
main.mainloop()
